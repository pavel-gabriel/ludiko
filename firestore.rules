rules_version = '2';

// Firestore rules for Ludiko â€” Phase 1c (Classroom / Teacher Mode)
service cloud.firestore {
  match /databases/{database}/documents {
    // Default: deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Game history: any authenticated user can create entries and read all history
    match /gameHistory/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
    }

    // Teacher profiles: teachers can read/write their own profile
    match /teachers/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Classroom sessions: teachers can CRUD their own sessions
    match /sessions/{sessionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
                    && request.resource.data.teacherUid == request.auth.uid;
      allow update, delete: if request.auth != null
                            && resource.data.teacherUid == request.auth.uid;
    }

    // Session results: teachers can read/write results for their sessions
    match /sessionResults/{sessionId} {
      allow read, write: if request.auth != null;
    }

    // Templates: teachers can CRUD their own templates
    match /templates/{templateId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
                    && request.resource.data.teacherUid == request.auth.uid;
      allow update, delete: if request.auth != null
                            && resource.data.teacherUid == request.auth.uid;
    }
  }
}
